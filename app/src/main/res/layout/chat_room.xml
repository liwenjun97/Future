<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/other_circle"
        android:padding="1dp">
        <Button
            android:id="@+id/outChatroom"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="返回"
            android:background="#00ffffff"
            android:textSize="@dimen/back"
            android:textColor="#ffffff"
            />
        <TextView
            android:id="@+id/chatroomTitle"
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="match_parent"
            android:textSize="@dimen/title"
            android:gravity="center"
            android:text="XXXX聊天室"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/chatPeople"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/man"/>
    </LinearLayout>
    <ListView
        android:id="@+id/converation_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:listSelector="#00000000"
        android:divider="@null"
        android:scrollbars="none"
        android:background="#ffffff"/>
    <LinearLayout
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        >
        <EditText
            android:id="@+id/words"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="#eeeeee"
            android:padding="5sp"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/sendMessage"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="发送"
            android:background="@drawable/other_btn"
            android:textColor="#000000"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>
